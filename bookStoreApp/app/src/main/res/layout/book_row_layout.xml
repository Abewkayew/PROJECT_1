<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorIndigo">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_name"
        android:text="Mariam"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorGreenDarken"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_desc"
        android:textSize="14dp"
        android:text="this is the best book and everyone has to buy it whether he/she affords it or not"
        android:layout_below="@+id/book_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:text="Author: "
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/title"
        android:layout_below="@id/book_desc"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_name"
        android:layout_marginTop="10dp"
        android:text="Who made it happen"
        android:textStyle="italic"
        android:layout_below="@+id/book_desc"
        android:layout_toRightOf="@+id/title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="14dp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/author_name"
        android:background="@color/colorWhite"
        />

</RelativeLayout>
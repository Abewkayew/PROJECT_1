<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorDeepOrangeOne"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/book_name_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Here are "
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_marginLeft="60dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_name_header"
        android:textColor="#ffffff"
        android:text="all the books "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/book_desc_header"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="you need"
        android:textSize="18dp"/>

</LinearLayout>